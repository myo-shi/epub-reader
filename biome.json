{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["node_modules/**", "tsconfig.*.json", ".zed/**"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useSelfClosingElements": {
					"level": "error",
					"fix": "safe"
				}
			},
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"fix": "safe",
					"options": {}
				}
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"css": {
		"formatter": {
			"enabled": true
		}
	}
}
